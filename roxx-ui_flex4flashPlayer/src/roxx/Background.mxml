<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%"
		  height="100%"
		  >

	<s:BorderContainer
		width="100%"
		height="100%"
		backgroundColor="0x000000"
		borderColor="0x000000"
		>

		<!-- Hint: we are sizeing the label over the total available Size to make it better looking -->
		<s:Group width="100%"
				 height="100%">

			<s:VGroup width="100%"
					  height="100%"
					  verticalAlign="middle"
					  horizontalAlign="center">

				<s:Label text="ROXX"
						 fontSize="200"
						 fontWeight="bold"
						 width="120%" height="120%"
						 rotationZ="-35"
						 color="#9b1d23"
						 fontFamily="Verdana"
						 />
			</s:VGroup>

			<s:BorderContainer borderVisible="false" width="100%" height="100%"
							   backgroundColor="0x000000" backgroundAlpha="0.4" />

		</s:Group>

	</s:BorderContainer>

</s:VGroup>
